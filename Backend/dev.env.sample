# =============================================================================
# SAMPLE ENVIRONMENT CONFIGURATION FILE
# =============================================================================
# Copy this file to .env and update the values according to your setup
# IMPORTANT: Never commit the actual .env file to version control!

# =============================================================================
# JWT & SECURITY SETTINGS
# =============================================================================
# REQUIRED: Secret key for JWT token generation (must be at least 32 characters)
# Generate a secure key using: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-here-must-be-at-least-32-characters-long

# JWT algorithm for token signing
ALGORITHM=HS256

# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# BCrypt rounds for password hashing (higher = more secure but slower)
BCRYPT_ROUNDS=12

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# Database connection URL
# Examples:
# SQLite: sqlite:///./app.db
# PostgreSQL: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///./app.db

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# API version
API_VERSION=v1

# Debug mode (set to False in production)
DEBUG=True

# =============================================================================
# SERVER SETTINGS
# =============================================================================
# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Development settings
SERVER_RELOAD=True
SERVER_LOG_LEVEL=info

# =============================================================================
# URL ANALYZER SETTINGS
# =============================================================================
# HTTP request timeout in seconds
REQUEST_TIMEOUT=10

# Maximum content size for URL analysis (in bytes, 5MB default)
MAX_CONTENT_SIZE=5242880

# Chunk size for streaming content (in bytes, 8KB default)
CHUNK_SIZE=8192

# User agent string for HTTP requests
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# =============================================================================
# PRODUCTION ENVIRONMENT EXAMPLE
# =============================================================================
# For production, consider these settings:
# DEBUG=False
# SERVER_RELOAD=False
# SERVER_LOG_LEVEL=warning
# BCRYPT_ROUNDS=14
# DATABASE_URL=postgresql://user:password@localhost:5432/production_db
